{
  "name": "@poppinss/request",
  "version": "0.0.0",
  "description": "Node.js http request wrapper used by AdonisJs",
  "main": "index.js",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "prepublishOnly": "npm run build",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "commit": "git-cz",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/poppinss/request.git"
  },
  "keywords": [
    "req",
    "http",
    "request",
    "adonisjs"
  ],
  "author": "virk,poppinss",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poppinss/request/issues"
  },
  "homepage": "https://github.com/poppinss/request#readme",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^1.1.0",
    "@types/node": "^12.0.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "doctoc": "^1.4.0",
    "japa": "^2.0.10",
    "mrm": "^1.2.1",
    "np": "^5.0.1",
    "pkg-ok": "^2.3.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.5",
    "yorkie": "^2.0.0"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "gitHooks": {
    "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
    "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": "build",
    "anyBranch": false
  }
}
